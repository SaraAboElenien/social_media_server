{
  "version": 2,
  "builds": [
    {
      "src": "packages/backend/index.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/backend/index.js"
    }
  ],
  "functions": {
    "packages/backend/index.js": {
      "maxDuration": 30
    }
  }
}
