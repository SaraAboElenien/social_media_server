{
  "name": "social-media-monorepo",
  "version": "1.0.0",
  "description": "A social media application monorepo with Node.js backend and React frontend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd packages/frontend && npm run build",
    "start": "cd packages/backend && npm start",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd packages/backend && npm install",
    "install:frontend": "cd packages/frontend && npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["social-media", "monorepo", "nodejs", "react"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
